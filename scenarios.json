{
  "scenarios": {
    "throughput-fixed-load": {
      "label": "A0-fixed-load-test",
      "description": "Menemukan throughput maksimum menggunakan fixed-load.",
      "txDuration": 180,
      "rateControl": {
        "type": "fixed-load",
        "opts": {
          "transactionLoad": 200,
          "startTps": 50
        }
      },
      "workload": {
        "module": "benchmarks/workload/mint-certificate-workload.js"
      }
    },
    "throughput-step": {
      "description": "Eksperimen untuk mencari titik jenuh performa minting NFT dengan meningkatkan beban TPS secara bertahap menggunakan fixed-rate.",
      "rounds": [
        {
          "id": "A1",
          "tps": 5
        },
        {
          "id": "A2",
          "tps": 10
        },
        {
          "id": "A3",
          "tps": 15
        },
        {
          "id": "A4",
          "tps": 20
        },
        {
          "id": "A5",
          "tps": 25
        },
        {
          "id": "A6",
          "tps": 30
        },
        {
          "id": "A7",
          "tps": 35
        },
        {
          "id": "A8",
          "tps": 40
        },
        {
          "id": "A9",
          "tps": 45
        },
        {
          "id": "A10",
          "tps": 50
        }
      ],
      "commonConfig": {
        "txDuration": 60,
        "rateControllerType": "fixed-rate",
        "workloadModule": "benchmarks/workload/mint-certificate-workload.js"
      }
    },
    "mixed-workload": {
      "description": "Membandingkan performa jaringan untuk operasi Tulis (I/O), Baca, dan Komputasi (CPU).",
      "rounds": [
        {
          "id": "B1",
          "label": "B1-write-mint",
          "rateTps": "OPTIMAL",
          "txDuration": 180,
          "workload": {
            "module": "benchmarks/workload/mint-certificate-workload.js"
          }
        },
        {
          "id": "B2",
          "label": "B2-read-certificate",
          "rateTps": 500,
          "txDuration": 180,
          "workload": {
            "module": "benchmarks/workload/read-certificate-workload.js",
            "arguments": {
              "totalTokens": 20000
            }
          }
        },
        {
          "id": "B3",
          "label": "B3-cpu-stress-calculate",
          "rateTps": 20,
          "txDuration": 180,
          "workload": {
            "module": "benchmarks/workload/cpu-stress-test-workload.js",
            "arguments": {
              "iterations": 500
            }
          }
        }
      ]
    },
    "worker-scale": {
      "description": "Eksperimen skalabilitas klien.",
      "rounds": [
        {
          "id": "C1",
          "workers": 1
        },
        {
          "id": "C2",
          "workers": 5
        }
      ],
      "commonConfig": {
        "labelPrefix": "mint",
        "txDuration": 180,
        "rateTps": "OPTIMAL",
        "workloadModule": "benchmarks/workload/mint-certificate-workload.js"
      }
    },
    "certificate-lifecycle": {
      "description": "Workflow Sertifikat LAM: mint, baca metadata, dan burn.",
      "rounds": [
        {
          "id": "LAM1",
          "label": "lam-mint",
          "workers": 3,
          "txDuration": 120,
          "rateControl": {
            "type": "fixed-rate",
            "opts": {
              "tps": "ENV:LAM_MINT_TPS:8"
            }
          },
          "workload": {
            "module": "benchmarks/workload/lam-mint-workload.js",
            "arguments": {
              "baseUri": "ipfs://lam",
              "codeUniv": "DCHAIN-U",
              "akreditasi": "A",
              "mulaiBerlaku": "2024-01-01",
              "akhirBerlaku": "2029-12-31",
              "batchId": "LAM"
            }
          }
        },
        {
          "id": "LAM2",
          "label": "lam-read",
          "workers": 3,
          "txDuration": 120,
          "rateControl": {
            "type": "fixed-rate",
            "opts": {
              "tps": "ENV:LAM_READ_TPS:60"
            }
          },
          "workload": {
            "module": "benchmarks/workload/lam-read-workload.js",
            "arguments": {
              "totalTokens": 100,
              "tokenIdOffset": 1
            }
          }
        },
        {
          "id": "LAM3",
          "label": "lam-burn",
          "workers": 3,
          "txDuration": 120,
          "rateControl": {
            "type": "fixed-rate",
            "opts": {
              "tps": "ENV:LAM_BURN_TPS:10"
            }
          },
          "workload": {
            "module": "benchmarks/workload/lam-burn-workload.js",
            "arguments": {
              "startTokenId": 1,
              "tokensPerWorker": "ENV:LAM_BURN_TOKENS_PER_WORKER:10"
            }
          }
        }
      ]
    },
    "stability-soak": {
      "description": "Stability soak test to observe performance over extended duration.",
      "rounds": [
        {
          "id": "S1",
          "label": "stability-soak",
          "rateTps": "OPTIMAL",
          "txDuration": 900,
          "workload": {
            "module": "benchmarks/workload/mint-certificate-workload.js",
            "arguments": {
              "batchId": "STAB",
              "codeUniv": "STABILITY"
            }
          }
        }
      ],
      "commonConfig": {
        "workers": 3
      }
    },
    "fault-injection": {
      "description": "Fault tolerance scenario with induced validator disruption.",
      "rounds": [
        {
          "id": "F1",
          "label": "fault-tolerance",
          "rateTps": "OPTIMAL",
          "txDuration": 420,
          "workload": {
            "module": "benchmarks/workload/mint-certificate-workload.js",
            "arguments": {
              "batchId": "FAULT",
              "codeUniv": "FAULT"
            }
          }
        }
      ],
      "commonConfig": {
        "workers": 3
      }
    }
  }
}
