# =================================================
#        TEMPLATE KONFIGURASI EKSPERIMEN
# =================================================

# --- Pengaturan Jaringan Blockchain ---
NETWORK_ID=477748
# Endpoint RPC dari node blockchain. Saat berjalan di Swarm, ini adalah nama layanan.
BLOCKCHAIN_NODE_URL="http://nonsigner1:8545"
CONSENSUS="PoA"
TOPOLOGY="3 Signer, 1 Non-Signer"
BLOCK_TIME=5
BLOCK_GAS_LIMIT=30000000
BLOCK_GAS_PRICE=0
TX_CONFIRM_BLOCKS=1

# --- Pengaturan Keystore & Akun ---
# Path ke direktori keystore di dalam kontainer Caliper.
KEYSTORE_SRC_PATH="/blockchain-poa-geth/data/nonsigner1/keystore"
KEYSTORE_PASSWORD="pass_nonsigner_1"

# Alamat & Private Key akan diisi secara otomatis oleh pipeline
ADDRESS=
PRIVATE_KEY=

# --- Pengaturan Kontrak Benchmark ---
# Definisikan semua kontrak yang akan diuji di sini
CONTRACT_NAME_MINT="MintCertificate"
CONTRACT_DEFINITION_PATH_MINT="contracts/MintCertificate.sol"

CONTRACT_NAME_CPU="CpuStressTest"
CONTRACT_DEFINITION_PATH_CPU="contracts/CpuStressTest.sol"

# --- Pengaturan Eksekusi Benchmark ---
# Daftar skenario yang dijalankan pipeline (dipisah koma)
CORE_SCENARIOS="A0,A,B,C,LAM"
# Daftar varian/topologi (dipisah koma), gunakan "default" jika tunggal
EXPERIMENT_VARIANTS="default"
# Berapa kali setiap skenario dijalankan per varian
NUM_TRIALS=3
# Override manual untuk nilai TPS optimal (biarkan kosong agar diisi otomatis dari skenario A)
OPTIMAL_TPS_OVERRIDE=
# Argumen tambahan untuk Caliper, misal: --caliper-flow-only-test
CALIPER_RUN_ARGS="--caliper-logging-level info"

# --- Monitoring & Observability ---
PROMETHEUS_PUSH_URL="http://caliper_pushgateway:9091"
PROMETHEUS_PUSH_JOB="caliper-benchmark"
PROMETHEUS_HOST_PORT=9090
PUSHGATEWAY_HOST_PORT=9091

# --- Pengaturan Database (untuk log-to-db.js) ---
# DATABASE_URL akan menggunakan PGHOST=caliper-db saat berjalan di dalam kontainer
DATABASE_URL="postgresql://\${POSTGRES_USER}:\${POSTGRES_PASSWORD}@\${PGHOST}:\${PGPORT}/\${POSTGRES_DB}"
POSTGRES_USER="caliper_user"
POSTGRES_PASSWORD="YourStrongPassword"
POSTGRES_DB="caliper_db"
PGHOST="localhost" # Default untuk eksekusi lokal, akan di-override oleh Docker
PGPORT=5432

# --- Gas Usage (Optional, for logging) ---
CONTRACT_GAS_MINT_benchmarkMint=
CONTRACT_GAS_READ_certificateNumbers=
CONTRACT_GAS_CPU_calculate=
